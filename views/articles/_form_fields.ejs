<div class="form-group mb-4">
    <label for="title">Title</label>
    <input value="<%= article.title %>" type="text" name="title" id="title" class="form-control" required>
</div>
<div class="form-group mb-4">
    <label for="description">Description</label>
    <input value="<%= article.description %>" type="text" name="description" id="description" class="form-control" required maxlength="250">
</div>
<div class="form-group mb-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/home" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
